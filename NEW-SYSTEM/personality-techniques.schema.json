          "implementationGuidance": {
            "type": "object",
            "properties": {
              "structure": {
                "type": "string",
                "description": "Guidelines for structuring effective analogies"
              },
              "integration": {
                "type": "string",
                "description": "How to integrate analogies into review content"
              },
              "process": {
                "type": "array",
