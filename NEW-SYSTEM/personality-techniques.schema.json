          "description": {
            "type": "string",
            "description": "Framework for effectively incorporating humor in reviews"
          },
          "humorTypes": {
            "type": "array",
            "description": "Types of humor appropriate for reviews",
            "items": {
              "type": "object",
              "required": ["name", "description", "example", "frequency", "bestFor"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the humor technique"
                },
                "description": {
                  "type": "string",
                  "description": "Description of this humor type"
                },
                "example": {
                  "type": "string",
                  "description": "Example of this technique in use"
                },
                "frequency": {
                  "type": "string",
                  "description": "Recommended frequency of use"
                },
                "bestFor": {
                  "type": "string",
                  "description": "Optimal contexts for this humor type"
                }
              }
            }
          },
          "implementationGuidance": {
            "type": "object",
            "properties": {
              "principles": {
                "type": "array",
                "description": "Core principles for implementing humor",
                "items": {
                  "type": "string"
                }
              },
              "precautions": {
                "type": "array",
                "description": "Things to avoid when using humor",
                "items": {
                  "type": "string"
                }
              },
              "balancingTips": {
                "type": "array",
                "description": "Tips for balancing humor with informational content",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
