{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Amazon Review Framework Product Analysis Schema",
    "description": "Framework for comprehensive product testing and evaluation",
    "type": "object",
    "required": ["metadata", "productTestingMatrices", "valueAnalysisFramework", "contentQualityAnalysis"],
    "properties": {
      "metadata": {
        "$ref": "common.schema.json#/definitions/metadata"
      },
      "productTestingMatrices": {
        "type": "object",
        "required": ["description", "implementationPrinciples", "matrixCreationProcess", "exampleMatrices", "integrationWithReviewProcess"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Overview of the product testing approach"
          },
          "implementationPrinciples": {
            "type": "array",
            "description": "Core principles for effective product testing",
            "items": {
              "type": "string"
            }
          },
          "matrixCreationProcess": {
            "type": "array",
            "description": "Steps for creating effective testing matrices",
            "items": {
              "type": "string"
            }
          },
          "exampleMatrices": {
            "type": "array",
            "description": "Example testing matrices by product category",
            "items": {
              "type": "object",
              "required": ["category", "testingDimensions"],
              "properties": {
                "category": {
                  "type": "string",
                  "description": "Product category"
                },
                "testingDimensions": {
                  "type": "array",
                  "description": "Key dimensions to test for this category",
                  "items": {
                    "type": "object",
                    "required": ["dimension", "examples", "implementation"],
                    "properties": {
                      "dimension": {
                        "type": "string",
                        "description": "Testing dimension"
                      },
                      "examples": {
                        "type": "string",
                        "description": "Examples of variables within this dimension"
                      },
                      "implementation": {
                        "type": "string",
                        "description": "How to implement testing on this dimension"
                      }
                    }
                  }
                },
                "documentationRecommendations": {
                  "type": "array",
                  "description": "Guidelines for documenting test results",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "integrationWithReviewProcess": {
            "type": "array",
            "description": "How to integrate testing into the review process",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "valueAnalysisFramework": {
        "type": "object",
        "required": ["description", "valueCategories", "integration", "valueNarrativeConnection"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Overview of value analysis approach"
          },
          "valueCategories": {
            "type": "object",
            "properties": {
              "pricePerformanceAnalysis": {
                "type": "object",
                "properties": {
                  "implementation": {
                    "type": "array",
                    "description": "Steps for price-performance analysis",
                    "items": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "type": "string",
                    "description": "Example of effective price-performance analysis"
                  }
                }
              },
              "usageOptimization": {
                "type": "object",
                "properties": {
                  "implementation": {
                    "type": "array",
                    "description": "Steps for usage optimization analysis",
                    "items": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "type": "string",
                    "description": "Example of effective usage optimization analysis"
                  }
                }
              },
              "compatibilityInsights": {
                "type": "object",
                "properties": {
                  "implementation": {
                    "type": "array",
                    "description": "Steps for compatibility analysis",
                    "items": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "type": "string",
                    "description": "Example of effective compatibility analysis"
                  }
                }
              }
            }
          },
          "integration": {
            "type": "array",
            "description": "Guidelines for integrating value analysis into reviews",
            "items": {
              "type": "string"
            }
          },
          "valueNarrativeConnection": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "description": "Techniques for embedding value insights in narratives"
              },
              "implementation": {
                "type": "array",
                "description": "Steps for narrative integration of value insights",
                "items": {
                  "type": "string"
                }
              },
              "example": {
                "type": "string",
                "description": "Example of narrative-embedded value analysis"
              }
            }
          }
        }
      },
      "contentQualityAnalysis": {
        "type": "object",
        "required": ["description", "strengths", "areasForEnhancement"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Framework for identifying strengths and improvement areas"
          },
          "strengths": {
            "type": "array",
            "description": "Common content strengths to identify and replicate",
            "items": {
              "type": "object",
              "properties": {
                "category": {
                  "type": "string",
                  "description": "Strength category"
                },
                "impact": {
                  "type": "string",
                  "description": "Potential impact of this strength"
                },
                "description": {
                  "type": "string",
                  "description": "Description of the strength"
                },
                "replicationStrategy": {
                  "type": "string",
                  "description": "How to replicate this strength in other reviews"
                }
              }
            }
          },
          "areasForEnhancement": {
            "type": "array",
            "description": "Common areas for content improvement",
            "items": {
              "type": "object",
              "properties": {
                "category": {
                  "type": "string",
                  "description": "Enhancement category"
                },
                "priority": {
                  "type": "string",
                  "description": "Priority level for this enhancement"
                },
                "description": {
                  "type": "string",
                  "description": "Description of the enhancement area"
                },
                "improvementStrategy": {
                  "type": "string",
                  "description": "Strategy for addressing this enhancement area"
                }
              }
            }
          }
        }
      },
      "scoringSystem": {
        "type": "object",
        "required": ["description", "categories"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Quantifiable assessment system for evaluating review quality"
          },
          "categories": {
            "type": "array",
            "description": "Scoring categories for comprehensive evaluation",
            "items": {
              "type": "object",
              "required": ["name", "maxPoints", "metrics"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Category name"
                },
                "maxPoints": {
                  "type": "integer",
                  "description": "Maximum points available in this category"
                },
                "metrics": {
                  "type": "array",
                  "description": "Individual metrics within this category",
                  "items": {
                    "type": "object",
                    "required": ["name", "points"],
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "Metric name"
                      },
                      "points": {
                        "type": "string",
                        "description": "Points range for this metric"
                      },
                      "guidance": {
                        "type": "string",
                        "description": "Guidance for assigning points"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "qualityVerification": {
        "type": "object",
        "properties": {
          "valueDensityCheck": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "description": "Process for identifying and eliminating low-value content"
              },
              "process": {
                "type": "array",
                "description": "Steps in the value density check process",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "comparativeAssessmentTechniques": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "Framework for effective product comparison"
          },
          "comparisonTypes": {
            "type": "array",
            "description": "Types of product comparisons",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Comparison type name"
                },
                "implementation": {
                  "type": "array",
                  "description": "Steps for implementing this comparison type",
                  "items": {
                    "type": "string"
                  }
                },
                "example": {
                  "type": "string",
                  "description": "Example of this comparison type"
                }
              }
            }
          },
          "placement": {
            "type": "array",
            "description": "Guidelines for placing comparisons within reviews",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "productSpecificAdaptations": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "Process for adapting analysis to specific product categories"
          },
          "adaptationPrinciples": {
            "type": "array",
            "description": "Principles for product-specific adaptations",
            "items": {
              "type": "string"
            }
          },
          "adaptationProcess": {
            "type": "array",
            "description": "Process for creating category-specific adaptations",
            "items": {
              "type": "object",
              "properties": {
                "phase": {
                  "type": "string",
                  "description": "Adaptation phase"
                },
                "actions": {
                  "type": "array",
                  "description": "Actions in this phase",
                  "items": {
                    "type": "string"
                  }
                },
                "outputs": {
                  "type": "array",
                  "description": "Expected outputs from this phase",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "uniqueContentIdentification": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "description": "Process for identifying valuable category-specific content"
              },
              "steps": {
                "type": "array",
                "description": "Steps in the identification process",
                "items": {
                  "type": "string"
                }
              },
              "exampleUniqueContent": {
                "type": "array",
                "description": "Examples of category-specific valuable content",
                "items": {
                  "type": "object",
                  "properties": {
                    "category": {
                      "type": "string",
                      "description": "Product category"
                    },
                    "uniqueContentNeeds": {
                      "type": "array",
                      "description": "Unique content needs for this category",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "frameworkRelationships": {
        "type": "array",
        "description": "Relationships between this component and others in the framework",
        "items": {
          "$ref": "common.schema.json#/definitions/componentRelationship"
        }
      }
    }
  }