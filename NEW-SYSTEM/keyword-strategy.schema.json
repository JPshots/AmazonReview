{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Amazon Review Framework Keyword Strategy Schema",
    "description": "Framework for strategically incorporating search-optimized keywords in reviews",
    "type": "object",
    "required": ["metadata", "corePrinciples", "keywordCategories", "implementationProcess", "placementStrategy"],
    "properties": {
      "metadata": {
        "$ref": "common.schema.json#/definitions/metadata"
      },
      "corePrinciples": {
        "type": "array",
        "description": "Fundamental principles guiding keyword strategy",
        "items": {
          "type": "string"
        }
      },
      "keywordCategories": {
        "type": "array",
        "description": "Categories of keywords to include in reviews",
        "items": {
          "type": "object",
          "required": ["name", "description", "searchIntent", "priority", "implementation"],
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the keyword category"
            },
            "description": {
              "type": "string",
              "description": "Description of this keyword type"
            },
            "examples": {
              "type": "array",
              "description": "Examples of keywords in this category",
              "items": {
                "type": "string"
              }
            },
            "searchIntent": {
              "type": "string",
              "description": "User search intent behind these keywords"
            },
            "priority": {
              "type": "string",
              "description": "Relative priority of this keyword category"
            },
            "implementation": {
              "type": "array",
              "description": "Guidelines for implementing this keyword type",
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "workflowIntegration": {
        "type": "object",
        "properties": {
          "preWritingPlanning": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "description": "Keyword tasks during pre-writing planning"
              },
              "reminder": {
                "type": "string",
                "description": "Reference to relevant workflow step"
              }
            }
          },
          "contentCreation": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "description": "Keyword tasks during content creation"
              },
              "reminder": {
                "type": "string",
                "description": "Reference to relevant workflow step"
              }
            }
          }
        }
      },
      "implementationProcess": {
        "type": "object",
        "required": ["description", "preReviewKeywordBrainstorm", "keywordSelectionCriteria"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Systematic approach to keyword identification and placement"
          },
          "integrationPoints": {
            "type": "array",
            "description": "References to related framework components",
            "items": {
              "type": "string"
            }
          },
          "preReviewKeywordBrainstorm": {
            "type": "object",
            "required": ["description", "steps"],
            "properties": {
              "description": {
                "type": "string",
                "description": "Process for identifying potential keywords before writing"
              },
              "steps": {
                "type": "array",
                "description": "Steps in the brainstorming process",
                "items": {
                  "type": "object",
                  "required": ["action", "questions", "output"],
                  "properties": {
                    "action": {
                      "type": "string",
                      "description": "Action to take in this step"
                    },
                    "questions": {
                      "type": "array",
                      "description": "Questions to guide this step",
                      "items": {
                        "type": "string"
                      }
                    },
                    "output": {
                      "type": "string",
                      "description": "Expected output from this step"
                    }
                  }
                }
              }
            }
          },
          "keywordSelectionCriteria": {
            "type": "object",
            "required": ["description", "criteria"],
            "properties": {
              "description": {
                "type": "string",
                "description": "Framework for prioritizing which keywords to include"
              },
              "criteria": {
                "type": "array",
                "description": "Criteria for keyword selection",
                "items": {
                  "type": "object",
                  "required": ["name", "description", "importance", "assessment"],
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Name of the criterion"
                    },
                    "description": {
                      "type": "string",
                      "description": "Description of this criterion"
                    },
                    "importance": {
                      "type": "string",
                      "description": "Relative importance of this criterion"
                    },
                    "assessment": {
                      "type": "string",
                      "description": "How to assess keywords on this criterion"
                    }
                  }
                }
              }
            }
          },
          "bestPractices": {
            "type": "array",
            "description": "Best practices for keyword implementation",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "placementStrategy": {
        "type": "object",
        "required": ["description", "highImpactPlacements"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Strategic locations within review for keyword placement"
          },
          "highImpactPlacements": {
            "type": "array",
            "description": "High-value locations for keyword placement",
            "items": {
              "type": "object",
              "required": ["location", "keywords", "guidelines"],
              "properties": {
                "location": {
                  "type": "string",
                  "description": "Content location"
                },
                "keywords": {
                  "type": "string",
                  "description": "Keyword types recommended for this location"
                },
                "guidelines": {
                  "type": "array",
                  "description": "Guidelines for implementing keywords here",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "naturalIntegrationTechniques": {
        "type": "object",
        "required": ["description", "techniques"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Methods for incorporating keywords naturally"
          },
          "techniques": {
            "type": "array",
            "description": "Specific integration techniques",
            "items": {
              "type": "object",
              "required": ["name", "description", "example", "implementation"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Technique name"
                },
                "description": {
                  "type": "string",
                  "description": "Description of this technique"
                },
                "example": {
                  "type": "object",
                  "properties": {
                    "awkward": {
                      "type": "string",
                      "description": "Example of awkward keyword usage"
                    },
                    "natural": {
                      "type": "string",
                      "description": "Example of natural keyword usage"
                    }
                  }
                },
                "implementation": {
                  "type": "string",
                  "description": "How to implement this technique"
                }
              }
            }
          }
        }
      },
      "verificationFramework": {
        "type": "object",
        "required": ["description", "preSubmissionChecks"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Process for ensuring effective keyword implementation"
          },
          "preSubmissionChecks": {
            "type": "array",
            "description": "Checks to perform before submission",
            "items": {
              "type": "object",
              "required": ["check", "method", "acceptance"],
              "properties": {
                "check": {
                  "type": "string",
                  "description": "Name of the check"
                },
                "method": {
                  "type": "string",
                  "description": "Method for performing the check"
                },
                "acceptance": {
                  "type": "string",
                  "description": "Criteria for passing the check"
                }
              }
            }
          }
        }
      },
      "keywordGatheringQuestions": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "Questions designed to elicit content with search value"
          },
          "questions": {
            "type": "array",
            "description": "Keyword-focused questions",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "bestPractices": {
        "type": "array",
        "description": "Overall best practices for keyword strategy",
        "items": {
          "type": "string"
        }
      },
      "frameworkRelationships": {
        "type": "array",
        "description": "Relationships between this component and others in the framework",
        "items": {
          "$ref": "common.schema.json#/definitions/componentRelationship"
        }
      }
    }
  }