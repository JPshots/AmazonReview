{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Amazon Review Framework Common Definitions",
    "description": "Shared schema definitions for the Amazon Review Framework",
    "definitions": {
      "metadata": {
        "type": "object",
        "description": "Standard metadata for framework components",
        "required": ["description", "version", "lastUpdated"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Description of the component's purpose"
          },
          "version": {
            "type": "string",
            "description": "Version number of the component",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
          },
          "lastUpdated": {
            "type": "string",
            "format": "date",
            "description": "Date of last component update"
          },
          "primaryPurpose": {
            "type": "string",
            "description": "Primary function of the component"
          }
        }
      },
      
      "componentRelationship": {
        "type": "object",
        "description": "Relationship between framework components",
        "required": ["component", "relationship"],
        "properties": {
          "component": {
            "type": "string",
            "description": "Name of the related component file"
          },
          "relationship": {
            "type": "string",
            "description": "Description of how the components are related"
          }
        }
      },
      
      "implementationStep": {
        "type": "object",
        "description": "A step in an implementation process",
        "required": ["order", "action"],
        "properties": {
          "order": {
            "type": "integer",
            "description": "Sequence number for the step"
          },
          "action": {
            "type": "string",
            "description": "Description of the action to take"
          },
          "description": {
            "type": "string",
            "description": "Detailed explanation of the step"
          },
          "reference": {
            "type": "string",
            "description": "Reference to another component for more information"
          },
          "dependencies": {
            "type": "array",
            "description": "Steps that must be completed before this one",
            "items": {
              "type": "integer"
            }
          },
          "activities": {
            "type": "array",
            "description": "Specific activities involved in this step",
            "items": {
              "type": "string"
            }
          },
          "validation": {
            "type": "string",
            "description": "How to verify the step was completed correctly"
          }
        }
      },
      
      "implementationProcess": {
        "type": "array",
        "description": "Ordered sequence of implementation steps",
        "items": {
          "$ref": "#/definitions/implementationStep"
        }
      },
      
      "principle": {
        "type": "object",
        "description": "A core principle or guideline",
        "required": ["principle", "description"],
        "properties": {
          "principle": {
            "type": "string",
            "description": "Concise statement of the principle"
          },
          "description": {
            "type": "string",
            "description": "Detailed explanation of the principle"
          },
          "implementation": {
            "type": "string",
            "description": "How to implement the principle"
          },
          "examples": {
            "type": "array",
            "description": "Examples demonstrating the principle",
            "items": {
              "type": "string"
            }
          },
          "rationale": {
            "type": "string",
            "description": "Reasoning behind the principle"
          }
        }
      },
      
      "technique": {
        "type": "object",
        "description": "A specific technique or method",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the technique"
          },
          "description": {
            "type": "string",
            "description": "Detailed explanation of the technique"
          },
          "example": {
            "type": "string",
            "description": "Example demonstrating the technique"
          },
          "frequency": {
            "type": "string",
            "description": "How often to use this technique"
          },
          "bestFor": {
            "type": "string",
            "description": "Optimal use cases for this technique"
          },
          "implementation": {
            "type": "array",
            "description": "Steps to implement this technique",
            "items": {
              "type": "string"
            }
          },
          "examples": {
            "type": "object",
            "description": "Good and bad examples of the technique",
            "properties": {
              "good": {
                "type": "string",
                "description": "Effective implementation example"
              },
              "bad": {
                "type": "string",
                "description": "Poor implementation example"
              },
              "explanation": {
                "type": "string",
                "description": "Why the good example is better than the bad"
              }
            }
          }
        }
      },
      
      "metric": {
        "type": "object",
        "description": "A measurable criterion for evaluation",
        "required": ["metric", "description"],
        "properties": {
          "metric": {
            "type": "string",
            "description": "Name of the metric"
          },
          "description": {
            "type": "string",
            "description": "What the metric measures"
          },
          "target": {
            "type": "string",
            "description": "Target value or goal for this metric"
          },
          "assessment": {
            "type": "string",
            "description": "How to assess performance on this metric"
          },
          "reference": {
            "type": "string",
            "description": "Reference to related assessment frameworks"
          }
        }
      },
      
      "section": {
        "type": "object",
        "description": "A section of a review",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the section"
          },
          "description": {
            "type": "string",
            "description": "Purpose and content of the section"
          },
          "required": {
            "type": "boolean",
            "description": "Whether this section is required in all reviews"
          },
          "purpose": {
            "type": "string",
            "description": "The strategic purpose this section serves"
          },
          "example": {
            "type": "string",
            "description": "Example of this section's content"
          },
          "whenToUse": {
            "type": "string",
            "description": "Guidance on when to include optional sections"
          },
          "personalityRatio": {
            "type": "string",
            "description": "Target information/personality ratio for this section"
          }
        }
      },
      
      "examplePair": {
        "type": "object",
        "description": "Before/after or weak/strong examples",
        "properties": {
          "weak": {
            "type": "string",
            "description": "Weak or suboptimal example"
          },
          "strong": {
            "type": "string",
            "description": "Strong or optimal example"
          },
          "bad": {
            "type": "string",
            "description": "Bad or ineffective example"
          },
          "good": {
            "type": "string",
            "description": "Good or effective example"
          },
          "before": {
            "type": "string",
            "description": "Example before improvement"
          },
          "after": {
            "type": "string",
            "description": "Example after improvement"
          },
          "explanation": {
            "type": "string",
            "description": "Why the improvement is effective"
          }
        }
      },
      
      "productCategory": {
        "type": "object",
        "description": "Product category with specific guidance",
        "required": ["category"],
        "properties": {
          "category": {
            "type": "string",
            "description": "Name of the product category"
          },
          "personalityAdjustment": {
            "type": "string",
            "description": "Recommended adjustment to personality ratio"
          },
          "rationale": {
            "type": "string",
            "description": "Reasoning behind the adjustment"
          },
          "keyDimensions": {
            "type": "array",
            "description": "Key evaluation dimensions for this category",
            "items": {
              "type": "string"
            }
          },
          "specializedSections": {
            "type": "array",
            "description": "Category-specific review sections",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the specialized section"
                },
                "description": {
                  "type": "string",
                  "description": "Purpose of the specialized section"
                },
                "replacesOrComplements": {
                  "type": "string",
                  "description": "Relationship to standard sections"
                }
              }
            }
          },
          "essentialQuestions": {
            "type": "array",
            "description": "Category-specific questions to ask",
            "items": {
              "type": "string"
            }
          }
        }
      },
      
      "implementationGuidance": {
        "type": "array",
        "description": "Practical guidance for implementation",
        "items": {
          "type": "string"
        }
      },
      
      "valueDriver": {
        "type": "object",
        "description": "Core value element that drives review quality",
        "required": ["driver", "description"],
        "properties": {
          "driver": {
            "type": "string",
            "description": "Name of the value driver"
          },
          "description": {
            "type": "string",
            "description": "Explanation of the value driver"
          },
          "implementation": {
            "type": "array",
            "description": "How to implement this value driver",
            "items": {
              "type": "string"
            }
          },
          "examples": {
            "type": "array",
            "description": "Examples demonstrating this value driver",
            "items": {
              "type": "string"
            }
          },
          "reference": {
            "type": "string",
            "description": "Reference to related framework components"
          }
        }
      },
      
      "workflowStage": {
        "type": "object",
        "description": "A stage in the review creation workflow",
        "required": ["id", "name", "description"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the stage"
          },
          "name": {
            "type": "string",
            "description": "Human-readable name of the stage"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the stage purpose"
          },
          "requiredComponents": {
            "type": "array",
            "description": "Framework components required for this stage",
            "items": {
              "type": "string"
            }
          },
          "dependencies": {
            "type": "array",
            "description": "Stages that must be completed before this one",
            "items": {
              "type": "string"
            }
          },
          "checkpoints": {
            "type": "array",
            "description": "Validation points for this stage",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }