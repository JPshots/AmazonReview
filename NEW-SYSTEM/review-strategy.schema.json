{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Amazon Review Framework Strategy Schema",
    "description": "Core principles and strategic vision for creating exceptional Amazon reviews",
    "type": "object",
    "required": ["metadata", "reviewGoal", "reviewProcess", "valueDrivers", "corePrinciples"],
    "properties": {
      "metadata": {
        "$ref": "common.schema.json#/definitions/metadata"
      },
      "reviewGoal": {
        "type": "object",
        "required": ["primary", "strategies"],
        "properties": {
          "primary": {
            "type": "string",
            "description": "Primary goal of all reviews created with this framework"
          },
          "strategies": {
            "type": "array",
            "description": "Key strategies for achieving the primary goal",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "reviewProcess": {
        "type": "object",
        "required": ["description", "phases"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Overview of the unified review process"
          },
          "phases": {
            "type": "array",
            "description": "Major phases in the review creation process",
            "items": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "description": {
                    "type": "string",
                    "description": "Description of this process phase"
                  },
                  "reference": {
                    "type": "string",
                    "description": "Reference to detailed implementation documentation"
                  },
                  "key_activities": {
                    "type": "array",
                    "description": "Primary activities in this phase",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "valueDrivers": {
        "type": "array",
        "description": "Core elements that drive review quality and value",
        "items": {
          "$ref": "common.schema.json#/definitions/valueDriver"
        }
      },
      "corePrinciples": {
        "type": "array",
        "description": "Fundamental principles guiding review creation",
        "items": {
          "$ref": "common.schema.json#/definitions/principle"
        }
      },
      "successMetrics": {
        "type": "object",
        "description": "Criteria for measuring review quality and effectiveness",
        "properties": {
          "quantitative": {
            "type": "array",
            "description": "Measurable numeric metrics",
            "items": {
              "$ref": "common.schema.json#/definitions/metric"
            }
          },
          "qualitative": {
            "type": "array",
            "description": "Subjective quality assessments",
            "items": {
              "$ref": "common.schema.json#/definitions/metric"
            }
          }
        }
      },
      "frameworkRelationships": {
        "type": "array",
        "description": "Relationships between this component and others in the framework",
        "items": {
          "$ref": "common.schema.json#/definitions/componentRelationship"
        }
      }
    }
  }