                    "type": "array",
                    "description": "Principles of vivid imagery",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "naturalHumorTechniques": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "description": "Strategies for integrating humor naturally"
              },
              "principles": {
                "type": "array",
                "description": "Principles of natural humor",
                "items": {
                  "type": "string"
                }
              },
              "techniques": {
                "type": "object",
                "properties": {
                  "embeddedMetaphors": {
                    "type": "object",
                    "properties": {
                      "description": {
                        "type": "string",
                        "description": "Description of embedded metaphors"
                      },
                      "examples": {
                        "type": "object",
                        "properties": {
                          "weak": {
                            "type": "string",
                            "description": "Weak example"
