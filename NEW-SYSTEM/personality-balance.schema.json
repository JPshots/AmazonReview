                  "functionalSimiles": {
                    "type": "object",
                    "properties": {
                      "description": {
                        "type": "string",
                        "description": "Description of functional similes"
                      },
                      "examples": {
                        "type": "object",
                        "properties": {
                          "weak": {
                            "type": "string",
                            "description": "Weak example"
                          },
                          "strong": {
                            "type": "string",
                            "description": "Strong example"
                          }
                        }
                      }
                    }
                  }
                }
              },
              "implementation": {
                "type": "array",
                "description": "Implementation guidelines",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "implementationSequence": {
            "type": "array",
            "description": "Sequence for implementing figurative language",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "implementationProcess": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "Structured approach to integrating personality"
          },
          "criticalPrePlanning": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "description": "Title of the pre-planning process"
              },
              "description": {
                "type": "string",
                "description": "Description of pre-planning"
              },
              "reference": {
                "type": "string",
                "description": "Reference to detailed workflow"
              },
              "mandatorySteps": {
                "type": "array",
                "description": "Required pre-planning steps",
                "items": {
                  "type": "object",
                  "properties": {
                    "order": {
                      "type": "integer",
                      "description": "Step order"
                    },
                    "action": {
                      "type": "string",
                      "description": "Action to take"
                    },
                    "guidance": {
                      "type": "object",
                      "properties": {
                        "principles": {
                          "type": "array",
                          "description": "Guidance principles",
                          "items": {
                            "type": "string"
                          }
                        },
                        "options": {
                          "type": "array",
                          "description": "Technique options",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "simplifiedWorkflow": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "description": "Step-by-step process for implementing personality balance"
              },
              "stages": {
                "type": "array",
                "description": "Implementation stages",
                "items": {
                  "type": "object",
                  "properties": {
                    "order": {
                      "type": "integer",
                      "description": "Stage order"
                    },
                    "name": {
                      "type": "string",
                      "description": "Stage name"
                    },
                    "action": {
                      "type": "string",
                      "description": "Action to take"
                    },
                    "validation": {
                      "type": "string",
                      "description": "Validation criteria"
                    },
                    "reference": {
                      "type": "string",
                      "description": "Reference to detailed guidance"
                    },
                    "note": {
                      "type": "string",
                      "description": "Additional note"
