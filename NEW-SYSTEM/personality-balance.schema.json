{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Amazon Review Framework Personality Balance Schema",
    "description": "Framework for balancing informational content and personality in reviews",
    "type": "object",
    "required": ["metadata", "contentRatios", "productTypeAdjustments", "sectionSpecificAdjustments", "implementationTechniques"],
    "properties": {
      "metadata": {
        "$ref": "common.schema.json#/definitions/metadata"
      },
      "contentRatios": {
        "type": "object",
        "required": ["description", "baselineRatios", "personalityComponents", "implementationPrinciples"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Overview of the information-personality balance concept"
          },
          "baselineRatios": {
            "type": "object",
            "required": ["informational", "personality", "flexibility"],
            "properties": {
              "informational": {
                "type": "integer",
                "description": "Percentage of informational content"
              },
              "personality": {
                "type": "integer",
                "description": "Percentage of personality content"
              },
              "flexibility": {
                "type": "integer",
                "description": "Percentage of flexible content"
              },
              "note": {
                "type": "string",
                "description": "Note about content allocation"
              }
            }
          },
          "personalityComponents": {
            "type": "object",
            "required": ["humor", "personalExperience", "conversationalElements"],
            "properties": {
              "humor": {
                "type": "integer",
                "description": "Percentage of humor in personality content"
              },
              "personalExperience": {
                "type": "integer",
                "description": "Percentage of personal experience in personality content"
              },
              "conversationalElements": {
                "type": "integer",
                "description": "Percentage of conversational elements in personality content"
              },
              "note": {
                "type": "string",
                "description": "Note about personality components"
              }
            }
          },
          "implementationPrinciples": {
            "type": "array",
            "description": "Principles for implementing the content ratio",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "productTypeAdjustments": {
        "type": "object",
        "required": ["description", "adjustments", "implementationGuidance"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Modifications to personality ratio based on product category"
          },
          "adjustments": {
            "type": "array",
            "description": "Adjustments by product category",
            "items": {
              "type": "object",
              "required": ["type", "personalityAdjustment", "rationale"],
              "properties": {
                "type": {
                  "type": "string",
                  "description": "Product category type"
                },
                "personalityAdjustment": {
                  "type": "string",
                  "description": "Recommended personality adjustment"
                },
                "rationale": {
                  "type": "string",
                  "description": "Reason for this adjustment"
                }
              }
            }
          },
          "implementationGuidance": {
            "type": "array",
            "description": "Guidance for implementing adjustments",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "sectionSpecificAdjustments": {
        "type": "object",
        "required": ["description", "contentTypeAllocations", "implementationGuidance"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Different review sections require different personality ratios"
          },
          "contentTypeAllocations": {
            "type": "array",
            "description": "Personality adjustments by content type",
            "items": {
              "type": "object",
              "required": ["contentType", "personalityAdjustment", "rationale"],
              "properties": {
                "contentType": {
                  "type": "string",
                  "description": "Content type or section"
                },
                "personalityAdjustment": {
                  "type": "string",
                  "description": "Recommended personality adjustment"
                },
                "rationale": {
                  "type": "string",
                  "description": "Reason for this adjustment"
                }
              }
            }
          },
          "implementationGuidance": {
            "type": "array",
            "description": "Guidance for implementing section-specific adjustments",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "implementationTechniques": {
        "type": "object",
        "required": ["description", "frontLoading", "listItemStrategy", "comparativeFramework", "principles"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Specific methods for effectively integrating personality"
          },
          "frontLoading": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "description": "Principle of placing information before personality"
              },
              "examples": {
                "type": "object",
                "properties": {
                  "bad": {
                    "type": "string",
                    "description": "Example of poor front-loading"
                  },
                  "good": {
                    "type": "string",
                    "description": "Example of good front-loading"
                  }
                }
              },
              "rationale": {
                "type": "string",
                "description": "Reason for front-loading information"
              }
            }
          },
          "listItemStrategy": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "description": "Strategy for enhancing list items with personality"
              },
              "examples": {
                "type": "object",
                "properties": {
                  "basic": {
                    "type": "string",
                    "description": "Example of basic list item"
                  },
                  "enhanced": {
                    "type": "string",
                    "description": "Example of enhanced list item"
                  }
                }
              },
              "implementation": {
                "type": "array",
                "description": "Steps for implementing list item enhancement",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "comparativeFramework": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "description": "Framework for incorporating product comparisons"
              },
              "comparisonTypes": {
                "type": "array",
                "description": "Types of product comparisons",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Comparison type name"
                    },
                    "implementation": {
                      "type": "array",
                      "description": "Implementation steps",
                      "items": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "type": "string",
                      "description": "Example of this comparison type"
                    }
                  }
                }
              },
              "placement": {
                "type": "array",
                "description": "Guidelines for placing comparisons",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "principles": {
            "type": "array",
            "description": "Core principles for technique implementation",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "personalityTechniques": {
        "type": "object",
        "required": ["description", "techniques"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Specific creative approaches for adding personality"
          },
          "techniques": {
            "type": "array",
            "description": "Specific personality techniques",
            "items": {
              "type": "object",
              "required": ["name", "description", "example", "frequency"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Technique name"
                },
                "description": {
                  "type": "string",
                  "description": "Description of this technique"
                },
                "example": {
                  "type": "string",
                  "description": "Example of this technique"
                },
                "frequency": {
                  "type": "string",
                  "description": "Recommended frequency of use"
                },
                "bestFor": {
                  "type": "string",
                  "description": "Optimal use cases for this technique"
                }
              }
            }
          }
        }
      },
      "figurativeLanguageImplementation": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "description": "Guidelines for implementing figurative language"
          },
          "analogyGuidelines": {
            "type": "object",
            "properties": {
              "principle": {
                "type": "string",
                "description": "Core principle for analogies"
              },
              "examples": {
                "type": "array",
                "description": "Examples of effective analogies",
                "items": {
                  "type": "object",
                  "properties": {
                    "analogy": {
                      "type": "string",
                      "description": "Example analogy"
                    },
                    "strength": {
                      "type": "string",
                      "description": "Why this analogy is effective"
                    }
                  }
                }
              },
              "vividImagery": {
                "type": "object",
                "properties": {
                  "description": {
                    "type": "string",
                    "description": "Description of vivid imagery approach"
                  },
                  "categories": {
                    "type": "array",
                    "description": "Categories of vivid imagery",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "description": "Category name"
                        },
                        "examples": {
                          "type": "array",
                          "description": "Examples in this category",
                          "items": {
                            "type": "string"
                          }
                        },
                        "application": {
                          "type": "string",
                          "description": "How to apply this category"
                        }
                      }
                    }
