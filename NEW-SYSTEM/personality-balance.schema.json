          "strategicPlacement": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "description": "Optimal locations for different personality techniques"
              },
              "placements": {
                "type": "array",
                "description": "Strategic placements by section",
                "items": {
                  "type": "object",
                  "properties": {
                    "section": {
                      "type": "string",
                      "description": "Review section"
                    },
                    "recommendedTechniques": {
                      "type": "array",
                      "description": "Recommended techniques for this section",
                      "items": {
                        "type": "string"
                      }
                    },
                    "balanceGuidance": {
                      "type": "string",
                      "description": "Guidance on personality density"
                    }
                  }
                }
              }
            }
          }
        }
