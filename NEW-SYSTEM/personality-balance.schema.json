      "authenticVoiceGuidelines": {
        "type": "object",
        "required": ["description", "corePrinciple", "redFlagPatterns", "authenticityMarkers", "implementationProcess", "authenticVsMarketingExamples"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Framework for identifying and preventing marketing-style language"
          },
          "corePrinciple": {
            "type": "object",
            "properties": {
              "definition": {
                "type": "string",
                "description": "Definition of authentic voice vs. marketing copy"
              },
              "implementation": {
                "type": "array",
                "description": "Implementation of the core principle",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "redFlagPatterns": {
            "type": "array",
            "description": "Patterns indicating marketing-style language",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Pattern name"
                },
                "marketing": {
                  "type": "string",
                  "description": "Marketing-style example"
                },
                "authentic": {
                  "type": "string",
                  "description": "Authentic-style example"
                },
                "explanation": {
                  "type": "string",
                  "description": "Explanation of the difference"
                }
              }
            }
          },
          "authenticityMarkers": {
            "type": "array",
            "description": "Markers of authentic voice",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Marker name"
                },
                "description": {
                  "type": "string",
                  "description": "Description of this marker"
                },
                "example": {
                  "type": "string",
                  "description": "Example of this marker"
                }
              }
            }
          },
          "implementationProcess": {
            "type": "array",
            "description": "Process for ensuring authentic voice",
            "items": {
              "type": "object",
              "properties": {
                "step": {
                  "type": "string",
                  "description": "Implementation step"
                },
                "process": {
                  "type": "array",
                  "description": "Process for this step",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "authenticVsMarketingExamples": {
            "type": "array",
            "description": "Contrasting examples of authentic vs. marketing language",
            "items": {
              "type": "object",
              "properties": {
                "marketing": {
                  "type": "string",
                  "description": "Marketing-style example"
